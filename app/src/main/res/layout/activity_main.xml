<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pokemon_bg"
        android:scaleType="centerCrop"
        android:alpha="0.1"
        android:contentDescription="@string/desc_background_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/title_pokemon_slots"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/slotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <ImageView
            android:id="@+id/slot1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/neumorph_indent_background"
            android:contentDescription="@string/desc_slot_image"
            android:padding="12dp"
            android:src="@drawable/poke_ball" />

        <ImageView
            android:id="@+id/slot2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/neumorph_indent_background"
            android:contentDescription="@string/desc_slot_image"
            android:padding="12dp"
            android:src="@drawable/poke_ball" />

        <ImageView
            android:id="@+id/slot3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/neumorph_indent_background"
            android:contentDescription="@string/desc_slot_image"
            android:padding="12dp"
            android:src="@drawable/poke_ball" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prizeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/neumorph_indent_surface_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slotsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/instruction_match_3"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:columnCount="4">

                <ImageView android:src="@drawable/pikachu" style="@style/PrizeImageStyle" android:contentDescription="@string/desc_prize_pikachu"/>
                <ImageView android:src="@drawable/charmander" style="@style/PrizeImageStyle" android:contentDescription="@string/desc_prize_charmander"/>
                <ImageView android:src="@drawable/squirtle" style="@style/PrizeImageStyle" android:contentDescription="@string/desc_prize_squirtle"/>
                <ImageView android:src="@drawable/bulbasaur" style="@style/PrizeImageStyle" android:contentDescription="@string/desc_prize_bulbasaur"/>
            </GridLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/inputAndCounterContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:background="@drawable/neumorph_indent_surface_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonSpin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prizeCard"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/inputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/label_choose_pokemon"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextGuess"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="16dp"
            android:autofillHints="name"
            android:background="@drawable/neumorph_indent_background"
            android:gravity="center"
            android:hint="@string/hint_enter_pokemon"
            android:inputType="textCapWords"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/spinCounterCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/neumorph_extrude_background"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/textViewSpinCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Spins: 0" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSpin"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/neumorph_extrude_background"
        android:fontFamily="sans-serif-black"
        android:text="@string/button_spin"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>